@model DotNetBrushUp.DataModels.ContactDataModel

@{
    ViewData["Title"] = "Create";
}

<h1 style="text-align:center">Create Contact</h1>

<hr />
<div class="row">
    <div style="display: flex; justify-content: center; align-items: center;">
        <div class="col-md-4">
            <form asp-action="AddContact" id="createContactForm" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ContactName" class="control-label">Contact Name</label>
                    <input asp-for="ContactName" class="form-control" id="ContactName" />
                    <span asp-validation-for="ContactName" class="text-danger" id="spnContactName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContactEmail" class="control-label">Contact Email</label>
                    <input asp-for="ContactEmail" class="form-control" id="ContactEmail" />
                    <span asp-validation-for="ContactEmail" class="text-danger" id="spnContactEmail"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContactAddress" class="control-label">Contact Address</label>
                    <input asp-for="ContactAddress" class="form-control" id="ContactAddress" />
                    <span asp-validation-for="ContactAddress" class="text-danger" id="spnContactAddress"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContactPhoneNo" class="control-label">Contact PhoneNo</label>
                    <input asp-for="ContactPhoneNo" class="form-control" id="ContactPhoneNo" />
                    <span asp-validation-for="ContactPhoneNo" class="text-danger" id="spnContactPhoneNo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContactProofFile" class="control-label">Contact ProofFile</label>
                    <input asp-for="ContactProofFile" name="ContactProofFile" type="file" class="form-control" id="ContactProofFile" />
                    <span asp-validation-for="ContactProofFile" class="text-danger" id="spnContactProof"></span>
                </div>
                <div class="form-group">
                    <input type="submit" id="btn-submit" value="Create" class="btn btn-primary" /><a style="margin-left:20px" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
