@model DotNetBrushUp.DataModels.EmployeeDetail

@{
    ViewData["Title"] = "Get Employee Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Get Employee Details</h1>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="employeeId">Employee ID:</label>
                <input type="text" class="form-control" id="employeeId" placeholder="Enter Employee ID">
            </div>
            <button id="getEmployeeButton" class="btn btn-primary">Get Employee Details</button>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Employee Details:</h3>
            <p>Employee ID: <span id="empId"></span></p>
            <p>Employee Name: <span id="empName"></span></p>
            <p>Employee Location: <span id="empLocation"></span></p>
            <p>Employee Phone No: <span id="empPhoneNo"></span></p>
            <!-- Add other employee details here -->
        </div>
    </div>
</div>