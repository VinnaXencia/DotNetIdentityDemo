@model DotNetBrushUp.DataModels.EmployeeDetail

@{
    ViewData["Title"] = "AddEmployeeDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Employee Detail</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEmployeeDetail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeLocation" class="control-label"></label>
                <input asp-for="EmployeeLocation" class="form-control" />
                <span asp-validation-for="EmployeeLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeePhoneNo" class="control-label"></label>
                <input asp-for="EmployeePhoneNo" class="form-control" />
                <span asp-validation-for="EmployeePhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeProofFile" class="control-label"></label>
                <input asp-for="EmployeeProofFile" type="file" class="form-control" />
                <span asp-validation-for="EmployeeProofFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
